<%= form_for @category do | f | %>
  <fieldset>
    <%= f.label :name %>
    <%= f.text_field :name, :required => true, :placeholder => 'Eg. Greek' %>
  </fieldset>
  <label></label>
  <fieldset>
    <%= f.submit "Update" %>
  </fieldset>
<% end %>

<br />
<%= button_to 'Delete Category', @category, :method => 'delete', :data => { :confirm => 'Are you sure? This category will be deleted forever' } %>
